<!DOCTYPE html>
<html>
<head> 
	<title>Amenity Detection - Property Name</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale = 1.0, shrink-to-fit=no">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
	<link rel="stylesheet" href="../public/style.css">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
</head>
<body class="bg-info">
	<nav class="navbar navbar-dark justify-content-between">
		<a class="navbar-brand">Amenity Detection</a>
		<span class="navbar-text ml-auto mr-4 text-light">
			Welcome home
		</span>
		<a class="button btn btn-danger my-2 my-sm-0" href="/user/logout">Logout</a>
	</nav>

	<section class="container-fluid px-5 py-5" id="intro"> 
		<div class="row align-items-center">
			<div class="col-8 text-center"> 
				
				<div class="mb-4 text-center">
					<h2><%=property['name']%></h2>
				</div>
				<div class="row align-items-center">
				    <% for (var i = 0; i < property['photo_urls'].length; i++) { %>
                        <div>
                            <img id="inputImg" src="<%= property['photo_urls'][i]%>" class="text-center w-50" alt="">
                            <img id="outputImg" src="<%=property['labeled_photo_urls'][0]%>" class="text-center w-50 hidden" alt="">
                        </div>
					<% } %>
				</div>
                <div>
					<button id="imgToggler" class="btn btn-info mt-4">Show Predictions</button>
				</div>
				<div class="mt-4 text-center">
                    <a class="btn btn-primary" href="/user/<%=user_id%>/landing">Back to Property List</a>
				</div>
			</div>
			<div class="col-3 offset-1 text-center"> 
				<div class="mb-4 text-left">
					<form action="/" method="POST">
						<!-- list all the ones (alphabetically) that were found in the db with checked attr-->
						<div class="mb-4 text-left">
							<h2>Found Labels</h2>
						</div>
                        <% for (var i = 0; i < property['labels'].length; i++) { %>
                            <div>
                                <input type="checkbox" id=<%=property['labels'][i]%> name=<%=property['labels'][i]%> value=<%=property['labels'][i]%> checked>
						        <label for="vehicle1"> <%=property['labels'][i]%></label><br>
                            </div>
					    <% } %>
						<br>
						<!-- list all the ones (alphabetically) that were NOT found in the db-->
						<div class="mb-4 text-left">
							<h2>Other Labels</h2>
						</div>
						<input type="checkbox" id="Hair Dryer" name="Hair Dryer" value="Hair Dryer">
						<label for="Hair Dryer"> Hair Dryer</label><br>
						<input type="checkbox" id="Fridge" name="Fridge" value="Fridge">
						<label for="Fridge"> Fridge</label><br>
						<input type="checkbox" id="Shower" name="Shower" value="Shower">
						<label for="Shower"> Shower</label><br>
						<br>

						<input type="submit" class="btn btn-warning" value="Update">
					</form>
				</div>
			</div>
		</div>
	</section>

	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
	crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
	crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
	crossorigin="anonymous"></script>
	<script>
	    $('#imgToggler').click(function(){
	    	$( "#inputImg" ).toggleClass( "hidden" );
	    	$( "#outputImg" ).toggleClass( "hidden" );
	    	if ($('#imgToggler').text()=='Show Predictions') {
	    		$('#imgToggler').html("Hide Predictions");
	    	}
	    	else {
	    		$('#imgToggler').html("Show Predictions");
	    	}
		});
    </script>

</body>
</html>